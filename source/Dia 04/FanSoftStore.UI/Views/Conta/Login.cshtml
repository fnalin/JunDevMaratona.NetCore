@model LoginVM
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>

<form method="post">
    <div class="form-group">
        <label>Email</label>
        <input type="text" asp-for="Email" class="form-control" autofocus />
        <small class="is-invalid">
            <span asp-validation-for="Email"></span>
        </small>
    </div>

    <div class="form-group">
        <label>Senha</label>
        <input type="password" asp-for="Senha" class="form-control" />
        <small class="is-invalid">
            <span asp-validation-for="Senha"></span>
        </small>
    </div>

    <div class="form-check">
        <input type="checkbox" class="form-check-input" asp-for="Lembrar">
        <label class="form-check-label" asp-for="Lembrar"></label>
    </div>

    <button class="btn btn-secondary">Entrar</button>
    <a asp-action="Index" asp-controller="Home" class="btn btn-info">Cancelar</a>

</form>

@section scripts{
    <script src="~/node_modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/node_modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.js"></script>
    <script src="~/js/methods_pt.js"></script>
}