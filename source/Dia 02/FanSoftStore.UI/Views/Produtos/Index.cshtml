@model IEnumerable<Produto>
@{
    ViewBag.Title = "Listagem de Produtos";
}
<h2>@ViewBag.Title</h2>


<div>
    <a class="btn btn-success" href="@Url.Action("AddEdit")">Adicionar</a>
</div>

<table class="table table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th>Valor</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.Tipo.Nome</td>
                <td>@item.Valor</td>
            </tr>
        }
    </tbody>
</table>